project 'Sparklers.xcodeproj/'

# Uncomment the next line to define a global platform for your project
platform :ios, '10.0'

target 'Sparklers' do
    # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
    use_frameworks!
    inhibit_all_warnings!

    
    # Rx
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'RxViewController'
    pod 'RxDataSources'
    pod 'RxOptional'
    pod 'RxGesture'

    # UI
    pod 'SnapKit'
    pod 'ManualLayout'

    pod 'KYDrawerController'
    
    # Logging
    pod 'CocoaLumberjack/Swift'
    
    
    
    # Architecture
    pod 'ReactorKit'

    # Animation
    pod 'ValueAnimator'
    
    
    
    # Misc.
    pod 'Then'
    pod 'ReusableKit'
    
    # SDK
    pod 'Firebase/Core'
    pod 'Firebase/Crash'
    pod 'Firebase/AdMob'
    pod 'Fabric'
    pod 'Crashlytics'
    

    
    
end
